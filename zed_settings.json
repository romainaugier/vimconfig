{
  "project_panel": {
    "dock": "right"
  },
  "relative_line_numbers": true,
  "format_on_save": "off",
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 13,
  "theme": {
    "mode": "system",
    "light": "Gruvbox Light Soft",
    "dark": "One Dark"
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "file_types": {
    "asm-intel-x86-generic": ["*.asm"]
  },
  "wrap_guides": [80]
}
